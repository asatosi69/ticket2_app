<h1>『連絡事項』を登録</h1>
<%= form_for @page, url: pages_path do |form| %>
<%= render 'shared/error_messages', model: form.object %>
<p>
  <%= form.hidden_field :seller_id, value: current_seller.id %>
</p>
<p>
  <%= form.text_area :notice, size: "50x20",
      value: "適当なところで改行してください。" %>
</p>
<p>
  <%= form.submit "登録" %><%= button_to '戻る', {:controller => "pages", :action => "index"}, {:method => :get}  %>
</p>
<% end %>
