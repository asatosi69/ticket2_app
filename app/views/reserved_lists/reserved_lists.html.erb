<% content_for :css do %>
  <%= stylesheet_link_tag 'reserved_lists', media: 'all', 'data-turbolinks-track': 'reload' %>
<% end %>

<%= @stage.stage %>の予約一覧
<%= Time.current.strftime('%Y年%m月%d日 %H時%M分') %>
<table class='table table-striped table-bordered'>
  <thead class="thead-light text-center">
    <tr>
      <th><%= Ticket.human_attribute_name :buyer_furigana %></th>
      <th><%= Ticket.human_attribute_name :buyer_name %></th>
      <th><%= Ticket.human_attribute_name :kind_id %></th>
      <th><%= Ticket.human_attribute_name :count %></th>
      <th><%= Ticket.human_attribute_name :payment_id %></th>
      <th><%= Ticket.human_attribute_name :seller_id %></th>
      <th><%= Ticket.human_attribute_name :comment2 %></th>
    </tr>
  </thead>
  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.buyer_furigana&.slice(0...8) %></td>
        <td><%= ticket.buyer_name&.slice(0...8) %></td>
        <td><%= ticket.kind.kind %></td>
        <td><%= ticket.count %></td>
        <td><%= ticket.payment.payment %></td>
        <td><%= ticket.seller.name&.slice(0...6) %></td>
        <td><%= ticket.comment2&.truncate(18) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
