<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <tr>
      <td style="width:13%">取扱者</td><td style="width:87%"><%= @ticket.seller.name %></td>
    </tr>
    <tr>
      <td style="width:13%">公演</td><td style="width:80%"><%= @ticket.stage.stage %></td>
    </tr>
    <tr>
      <td style="width:13%">チケット種別</td><td style="width:87%"><%= @ticket.kind.kind %></td>
    </tr>
    <tr>
      <td style="width:13%">支払方法</td><td style="width:87%"><%= @ticket.payment.payment %></td>
    </tr>
    <tr>
      <td style="width:13%">枚数</td><td style="width:87%"><%= @ticket.count %></td>
    </tr>
    <tr>
      <td style="width:13%">購入者名</td><td style="width:87%"><%= @ticket.buyer_name %></td>
    </tr>
    <tr>
      <td style="width:13%">購入者名フリガナ</td><td style="width:87%"><%= @ticket.buyer_furigana %></td>
    </tr>
    <tr>
      <td style="width:13%">購入者Eメール</td><td style="width:87%"><%= @ticket.buyer_mail %></td>
    </tr>
    <tr>
      <td style="width:13%">来場済</td><td style="width:87%">
        <% if @ticket.visited_flag %>
          ☑️
        <% else %>
          -
        <% end %>
      </td>
    </tr>
    <tr>
      <td style="width:13%">コメント</td><td style="width:87%"><%= simple_format(@ticket.comment1) %></td>
    </tr>
    <tr>
      <td style="width:13%">備考</td><td style="width:87%"><%= simple_format(@ticket.comment2) %></td>
    </tr>
  </table>
</div>
<%= link_to :back, :style=>"color:black" do %>
  <button>戻る</button>
<% end %>
