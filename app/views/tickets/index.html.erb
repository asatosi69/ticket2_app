<br>
<h3>『チケット』管理ページ</h3>
<br>
<br>
<%= link_to("チケット予約を登録する", new_ticket_path) %>
<br>
<br>
<%= form_with(scope: :search, url: tickets_path, method: :get, local: true) do |form| %>

    <% if current_seller.admin_flag? %>
      <div class="form-group">
        <%= form.label(:seller_id, Ticket.human_attribute_name(:seller_id)) %>
        <%= form.collection_select(:seller_id, Seller.all, :id, :name, selected: @search_params[:seller_id], prompt: "選択して下さい", :class => "form-control") %>
      </div>
    <% else %>
      <%= form.hidden_field :seller_id, value: current_seller.id %>
    <% end %>

    <div class="form-group">
      <%= form.label(:stage_id, Ticket.human_attribute_name(:stage_id)) %>
      <%= form.collection_select(:stage_id, Stage.all.order(stage_time: "ASC"), :id, :stage, selected: @search_params[:stage_id], prompt: "選択して下さい", :class => "form-control") %>
    </div>

    <div class="form-group">
      <%= form.label(:kind_id, Ticket.human_attribute_name(:kind_id)) %>
      <%= form.collection_select(:kind_id, Kind.all.order(kind: "ASC"), :id, :kind, selected: @search_params[:kind_id], prompt: "選択して下さい", :class => "form-control") %>
    </div>

    <div class="form-group">
      <%= form.label(:payment_id, Ticket.human_attribute_name(:payment_id)) %>
      <%= form.collection_select(:payment_id, Payment.all.order(payment: "ASC"), :id, :payment, selected: @search_params[:payment_id], prompt: "選択して下さい", :class => "form-control") %>
    </div>

    <%= form.label(:buyer_name, Ticket.human_attribute_name(:buyer_name)) %>
    <%= form.text_field :buyer_name, value: @search_params[:buyer_name] %>

    <%= form.label(:buyer_furigana, Ticket.human_attribute_name(:buyer_furigana)) %>
    <%= form.text_field :buyer_furigana, value: @search_params[:buyer_furigana] %>

    <BR>

    <%= form.label(:chk1, Ticket.human_attribute_name(:comment1)) %>
    <%= form.check_box :chk1 %>

    <%= form.label(:chk2, Ticket.human_attribute_name(:comment2)) %>
    <%= form.check_box :chk2 %>

    <%= form.submit(t('helpers.submit.search')) %>
<% end %>

<br>

<% if current_seller.admin_flag? %>
  <%= link_to tickets_download_path(format: :csv), :style=>"color:#333333" do %>
    <button>全レコードCSVダウンロード</button>
  <% end %>
<% end %>
<br>
<br>
<%= render :partial => "shared/ticket_format" %>
