<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover" style="table-layout:fixed;width:100%">
    <thead>
      <tr>
        <th><p class="text-center">取扱者</p></th>
        <th><p class="text-center">公演</p></th>
        <th><p class="text-center">チケット種別</p></th>
        <th><p class="text-center">消費する席数</p></th>
        <th><p class="text-center">料金</p></th>
        <th><p class="text-center">支払方法</p></th>
        <th><p class="text-center">変動額</p></th>
        <th><p class="text-center">枚数</p></th>
        <th><p class="text-center">予約者名</p></th>
        <th><p class="text-center">予約者名フリガナ</p></th>
        <th><p class="text-center">予約者Eメール</p></th>
        <th><p class="text-center">コメント</p></th>
        <th><p class="text-center">備考</p></th>
        <th><p class="text-center">来場済</p></th>
        <th><p class="text-center">アンケート送付済</p></th>
        <th><p class="text-center">お支払金額</p></th>
        <th><p class="text-center">人数</p></th>
      </tr>
    </thead>
    <tbody>
      <% @tickets.each do |ticket| %>
        <tr>
          <td align="center"><%= ticket.seller.name %></td>
          <td align="center"><%= ticket.stage.stage %></td>
          <td align="center"><%= ticket.kind.kind %></td>
          <td align="center"><%= ticket.kind.seats %></td>
          <td align="center"><%= ticket.kind.price %></td>
          <td align="center"><%= ticket.payment.payment %></td>
          <td align="center"><%= ticket.payment.discount_rate %></td>
          <td align="center"><%= ticket.count %></td>
          <td align="center"><%= ticket.buyer_name %></td>
          <td align="center"><%= ticket.buyer_furigana %></td>
          <td align="center"><%= ticket.buyer_mail %></td>
          <td align="center"><%= ticket.comment1 %></td>
          <td align="center"><%= ticket.comment2 %></td>
          <td align="center">
            <% if ticket.visited_flag %>
              ☑️
            <% else %>
              -
            <% end %>
          </td>
          <td align="center">
            <% if ticket.enquete_flag %>
              ☑️
            <% else %>
              -
            <% end %>
          </td>
          <td align="center"><%= (ticket.kind.price + ticket.payment.discount_rate) * ticket.count %></td>
          <td align="center"><%= ticket.kind.seats * ticket.count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<%= link_to "CSV出力", downloads_download_path(format: :csv), class: "btn btn-primary" %>
<%= link_to :back, :style=>"color:#333333" do %>
  <button>戻る</button>
<% end %>
