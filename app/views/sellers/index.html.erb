<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover" style="table-layout:fixed;width:45%">
    <thead>
      <tr>
        <th><p class="text-center">取扱者</p></th>
        <th style="width: 110px"><p class="text-center">管理者フラグ</p></th>
        <% if current_seller.admin_flag %>
          <th ><p class="text-center">管理者フラグ ON/OFF</p></th>
        <% end %>
        <th style="width: 60px"><p class="text-center">削除</p></th>
      </tr>
    </thead>

    <tbody>
      <% @sellers.each do |seller| %>
        <tr>
          <td><%= seller.name %></td>
          <td align="center">
            <% if seller.admin_flag %>
              ☑️
            <% else %>
              -
            <% end %>
          </td>
          <% if current_seller.admin_flag %>
            <td align="center"><%= button_to '権限を変更', seller_path(seller), {method: "patch"} %></td>
          <% end %>
          <td align="center"><%= button_to '削除', stage_path(seller), {method: "delete"} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
