<h1>取扱者情報を更新</h1>
<br>
<br>

<%= form_for @seller, url: seller_path, method: "patch" do |form| %>
<%= render 'shared/error_messages', model: form.object %>
<p>
<%= form.label(:name, Seller.human_attribute_name(:name), class:'control-label') %>
<%= form.hidden_field :name, value: "#{@seller.name}" %>
</p>
<p>
  <%= form.label(:admin_flag, Seller.human_attribute_name(:admin_flag), class:'control-label') %>
  <%= form.check_box :admin_flag , class: 'form-control' %>
</p>
<p>
  <%= form.label(:url, Seller.human_attribute_name(:url), class:'control-label') %>
  <%= form.text_field :url, value:"/registers/#{@seller.id}/new", class: 'form-control' %>
</p>
<p>
  <%= form.submit "更新" %><%= button_to '戻る', {:controller => "sellers", :action => "index"}, {:method => :get}  %>
</p>
<% end %>
