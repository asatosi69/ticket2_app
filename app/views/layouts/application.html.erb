<!DOCTYPE html>
<html>
  <head>
      <title>Tickets</title>
      <%= csrf_meta_tags %>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-default">
        <div class="navbar-header">
          <a class="navbar-brand">チケット管理システム</a>
        </div>
        <% if seller_signed_in? %>
          <h2><% current_seller.name %></h2>
          <ul class="nav navbar-nav">
            <li><%= link_to 'プロフィール変更', edit_seller_registration_path %></li>
            <li><%= link_to 'ログアウト', destroy_seller_session_path, method: :delete %></li>
            <li><%= link_to '連絡事項', pages_path %></li>
            <li><%= link_to 'チケット', tickets_path %></li>
            <li><%= link_to '取扱者', sellers_path %></li>
            <li><%= link_to '集計', lists_path %></li>
            <% if current_seller.admin_flag %>
              <li><%= link_to '公演', stages_path %></li>
              <li><%= link_to 'チケット種別', kinds_path %></li>
              <li><%= link_to '支払方法', payments_path %></li>
              <li><%= link_to '組み合わせ', connections_path %></li>
            <% end %>
            </ul>
          <% else %>
            <ul class="nav navbar-nav">
              <li><%= link_to 'サインアップ', new_seller_registration_path %></li>
              <li><%= link_to 'ログイン', new_seller_session_path %></li>
            </ul>
          <% end %>
      </nav>
    </header>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
