<!DOCTYPE html>
<html>
  <head>
      <%= csrf_meta_tags %>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= yield :css %> <!-- ここを追記 -->
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-default">
        <div class="navbar-header">
          <a class="navbar-brand">チケット管理システム</a>
        </div>
          <% if seller_signed_in? %>
            <br>
            <% if current_seller.admin_flag? %>
              <% if @master_stage.empty? || @master_kind.empty? || @master_payment.empty? %>
                <% if @master_stage.empty? %>
                  <ul class="nav navbar-nav">
                    <li><%= link_to 'プロフィール変更', edit_seller_registration_path %></li>
                    <li><%= link_to 'ログアウト', destroy_seller_session_path, method: :delete %></li>
                    <li><%= link_to '連絡事項', pages_path %></li>
                    <li><%= link_to '取扱者', sellers_path %></li>
                    <li><%= link_to '公演 ← チケットを予約するために登録が必要です', :stages, :style=>"color:#FF00FF"%></li>
                  </ul>
                <% else %>
                  <% if @master_kind.empty? %>
                    <ul class="nav navbar-nav">
                      <li><%= link_to 'プロフィール変更', edit_seller_registration_path %></li>
                      <li><%= link_to 'ログアウト', destroy_seller_session_path, method: :delete %></li>
                      <li><%= link_to '連絡事項', pages_path %></li>
                      <li><%= link_to '取扱者', sellers_path %></li>
                      <li><%= link_to '公演', stages_path %></li>
                      <li><%= link_to 'チケット種別 ← チケットを予約するために登録が必要です', :kinds, :style=>"color:#FF00FF"%></li>
                    </ul>
                  <% else %>
                    <% if @master_payment.empty? %>
                      <ul class="nav navbar-nav">
                        <li><%= link_to 'プロフィール変更', edit_seller_registration_path %></li>
                        <li><%= link_to 'ログアウト', destroy_seller_session_path, method: :delete %></li>
                        <li><%= link_to '連絡事項', pages_path %></li>
                        <li><%= link_to '取扱者', sellers_path %></li>
                        <li><%= link_to '公演', stages_path %></li>
                        <li><%= link_to 'チケット種別', kinds_path %></li>
                        <li><%= link_to '支払方法 ← チケットを予約するために登録が必要です', :payments, :style=>"color:#FF00FF"%></li>
                    <% end %>
                  <% end %>
                <% end %>
              <% else %>
                <ul class="nav navbar-nav">
                  <li><%= link_to 'プロフィール変更', edit_seller_registration_path %></li>
                  <li><%= link_to 'ログアウト', destroy_seller_session_path, method: :delete %></li>
                  <li><%= link_to '連絡事項', pages_path %></li>
                  <li><%= link_to '取扱者', sellers_path %></li>
                  <li><%= link_to '公演', stages_path %></li>
                  <li><%= link_to 'チケット種別', kinds_path %></li>
                  <li><%= link_to '支払方法', payments_path %></li>
                  <br>
                  <li><%= link_to 'チケット', tickets_path %></li>
                  <li><%= link_to '集計', lists_path %></li>
                  <li><%= link_to '来場者一覧', visitors_path %></li>
                  <li><%= link_to '組み合わせ', connections_path %></li>
                  <li><%= link_to '予約一覧印刷', reserved_lists_path %></li>
                  <li><%= link_to '予約半券印刷', reserved_stubs_path %></li>
                </ul>
                <% end %>
            <% else %>
              <% if @master_stage.empty? || @master_kind.empty? || @master_payment.empty? %>
                <ul class="nav navbar-nav">
                  <li><%= link_to 'プロフィール変更', edit_seller_registration_path %></li>
                  <li><%= link_to 'ログアウト', destroy_seller_session_path, method: :delete %></li>
                  <li><%= link_to '連絡事項', pages_path %></li>
                </ul>
              <% else %>
                <ul class="nav navbar-nav">
                  <li><%= link_to 'プロフィール変更', edit_seller_registration_path %></li>
                  <li><%= link_to 'ログアウト', destroy_seller_session_path, method: :delete %></li>
                  <li><%= link_to '連絡事項', pages_path %></li>
                  <li><%= link_to 'チケット', tickets_path %></li>
                  <li><%= link_to '取扱者', sellers_path %></li>
                  <li><%= link_to '集計', lists_path %></li>
                  <li><%= link_to '来場者一覧', visitors_path %></li>
                </ul>
              <% end %>
            <% end %>
          <% else %>
            <ul class="nav navbar-nav">
              <li><%= link_to 'サインアップ', new_seller_registration_path %></li>
              <li><%= link_to 'ログイン', new_seller_session_path %></li>
            </ul>
          <% end %>
      </nav>
    </header>
    <% if flash[:notice] %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if flash[:alert] %>
      <p class="alert"><%= alert %></p>
    <% end %>

      <%= yield %>

  </body>
</html>
