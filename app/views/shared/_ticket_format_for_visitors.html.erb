<% if @tickets.empty? %>

  <h1>登録されている『チケット予約』はありません</h1>

<% else %>
  <%= form_tag(visitor_path, method: 'patch') do %>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <% if current_seller.admin_flag %>
            <th><p class="text-center"> </p></th>
          <% end %>
          <th><p class="text-center">取扱者</p></th>
          <th><p class="text-center">公演</p></th>
          <th><p class="text-center">チケット種別</p></th>
          <th><p class="text-center">支払方法</p></th>
          <th><p class="text-center">チケット枚数</p></th>
          <th><p class="text-center">予約者名</p></th>
          <th><p class="text-center">予約者名フリガナ</p></th>
          <th style="width: 200px"><p class="text-center">予約者Eメール</p></th>
          <th><p class="text-center">来場済</p></th>
        </tr>
      </thead>

      <tbody>

          <% @tickets.each do |ticket| %>
            <tr>
              <% if current_seller.admin_flag %>
                <td class="align-middle"><p class="text-center"><%= check_box_tag 'tickets[]',ticket.id %></p></td>
              <% end %>
              <td class="align-middle"><p class="text-center"><%= ticket.seller.name %></p></td>
              <td class="align-middle"><p class="text-center"><%= ticket.stage.stage %></p></td>
              <td class="align-middle"><p class="text-center"><%= ticket.kind.kind %></p></td>
              <td class="align-middle"><p class="text-center"><%= ticket.payment.payment %></p></td>
              <td class="align-middle"><p class="text-center"><%= ticket.count %></p></td>
              <td class="align-middle"><p class="text-center"><%= ticket.buyer_name %></p></td>
              <td class="align-middle"><p class="text-center"><%= ticket.buyer_furigana %></p></td>
              <td class="align-middle"><p class="text-center"><%= ticket.buyer_mail %></p></td>
              <td class="align-middle"><p class="text-center">
                <% if ticket.visited_flag %>
                  ☑️
                <% else %>
                  -
                <% end %>
              </p></td>
            </tr>
          <% end %>


        <% end %>
      </tbody>
    </table>
  </div>
  <% if current_seller.admin_flag %>
    <p><%= submit_tag "来場済 ON/OFF", name: "Hanten" %>
       <%= submit_tag "アンケート送付", name: "Enquete" %></p>
    <%= link_to :back, :style=>"color:#333333" do %>
      <button>戻る</button>
    <% end %>
  <% else %>
    <%= link_to :back, :style=>"color:#333333" do %>
      <button>戻る</button>
    <% end %>
  <% end %>

<% end %>
