<% if @tickets.empty? %>

  <h1>登録されている『チケット予約』はありません</h1>

<% else %>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th style="width: 60px"><div class="position-in-the-cell1" "text-nowrap">詳細</div></th>
          <th style="width: 60px"><div class="position-in-the-cell1" "text-nowrap">編集</div></th>
          <th style="width: 60px"><div class="position-in-the-cell1" "text-nowrap">削除</div></th>
          <th><div class="position-in-the-cell1" "text-nowrap">取扱者</div></th>
          <th><div class="position-in-the-cell1" "text-nowrap">公演</div></th>
          <th><div class="position-in-the-cell1" "text-nowrap">チケット種別</div></th>
          <th><div class="position-in-the-cell1" "text-nowrap">支払方法</div></th>
          <th><div class="position-in-the-cell1" "text-nowrap">チケット枚数</div></th>
          <th><div class="position-in-the-cell1" "text-nowrap">予約者名</div></th>
          <th><div class="position-in-the-cell1" "text-nowrap">予約者名フリガナ</div></th>
          <th><div class="position-in-the-cell1" "text-nowrap">予約者Eメール</div></th>
          <th><div class="position-in-the-cell1" "text-nowrap">来場済</div></th>
        </tr>
      </thead>

      <tbody>
        <% @tickets.each do |ticket| %>
          <tr>
            <td><div class="position-in-the-cell1" "text-nowrap"><%= button_to '詳細', ticket_path(ticket), {method: "get"} %></td>
            <td><div class="position-in-the-cell1" "text-nowrap"><%= button_to '編集', edit_ticket_path(ticket), {method: "get"} %></td>
            <td><div class="position-in-the-cell1" "text-nowrap"><%= button_to '削除', ticket_path(ticket), {method: "delete"} %></td>
            <td><div class="position-in-the-cell1" "text-nowrap"><%= ticket.seller.name %></div></td>
            <td><div class="position-in-the-cell1" "text-nowrap"><%= ticket.stage.stage %></div></td>
            <td><div class="position-in-the-cell1" "text-nowrap"><%= ticket.kind.kind %></div></td>
            <td><div class="position-in-the-cell1" "text-nowrap"><%= ticket.payment.payment %></div></td>
            <td><div class="position-in-the-cell1" "text-nowrap"><%= ticket.count %></div></td>
            <td><div class="position-in-the-cell1" "text-nowrap"><%= ticket.buyer_name %></div></td>
            <td><div class="position-in-the-cell1" "text-nowrap"><%= ticket.buyer_furigana %></div></td>
            <td><div class="position-in-the-cell1" "text-nowrap"><%= ticket.buyer_mail %></div></td>
            <td><div class="position-in-the-cell1" "text-nowrap">
              <% if ticket.visited_flag %>
                ☑️
              <% else %>
                -
              <% end %>
            </div></td>
          </tr>
        <% end %>
        <%= paginate @tickets %>
      </tbody>
    </table>
  </div>
<% end %>
<%= link_to :back, :style=>"color:#333333" do %>
  <button>戻る</button>
<% end %>
